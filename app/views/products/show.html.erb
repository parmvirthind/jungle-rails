<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
          <dt>Rating</dt>
          <dd>
            <% @product.reviews.average(:rating).to_i.times do |x| %>
            ⭐️
            <% end %>
          </dd>
        </dl>
      </div>
    </div>

  </article>

  <div class="well">
  <%= form_for [@product, @review] do |f| %>
  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control"%>
  <%= f.label :rating%>
  <%= f.select :rating, [1,2,3,4,5] %><br />
  <%= f.submit class: "btn btn-info" %>
<% end %>
  </div>

<div class="panel panel-default items">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>User</th>
            <th>Rating</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          <% @reviews.each do |review| %>
            <% if user = User.find_by(id: review.user_id) %>
              <tr scope="row">
                <td>
                  <p><%= user.first_name %></p>
                </td>
                <td style="width:10%">
                  <% review.rating.times do |x|  %>
                  ⭐️
                  <% end %>
                </td>
                <td>
                  <%= review.description %>
                <% if user == current_user%>
                  <%= link_to fa_icon('trash'), review, :method => :delete, class: "btn btn-danger pull-right" %>
                <% end %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>

</section>